<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<fx:root type="javafx.scene.layout.VBox" xmlns:fx="http://javafx.com/fxml" stylesheets="@styles/feuille-styles.css">
    <VBox styleClass="conteneur">
        <HBox fx:id="conteneurMethode" spacing="10">
            <ComboBox fx:id="visibilite" styleClass="element" />
        </HBox>
        <Text>Paramètres</Text>
        <HBox spacing="10">
            <Button onAction="#ajouter" fx:id="boutonAjouter" />
            <VBox fx:id="parametresMethode" styleClass="conteneur" spacing="10"/>
        </HBox>
    </VBox>
</fx:root>
